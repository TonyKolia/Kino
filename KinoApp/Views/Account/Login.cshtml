@model LoginViewModel

@{ 
    var returnUrl = ViewBag.ReturnUrl as string;
}

<div class="register-form">
    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@returnUrl" method="post">
        <div class="form-group">
            <i class="fas fa-user"></i><label asp-for="Username"></label>
            <input class="form-control" asp-for="Username" />
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i><label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>

        <div asp-validation-summary="All" class="form-group">

        </div>

        <button type="submit" class="btn btn-primary btn-gray" style="background-color:yellow;color:black">Login</button>
    </form>
</div>
