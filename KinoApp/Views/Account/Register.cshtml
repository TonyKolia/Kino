@model RegisterViewModel

<div class="register-form">
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="form-group">
            <i class="fas fa-user"></i><label asp-for="Username"></label>
            <input class="form-control" asp-for="Username" />
        </div>
        <div class="form-group">
            <i class="fas fa-envelope"></i><label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="form-group">
            <i class="fas fa-calendar"></i><label asp-for="BirthDate"></label>
            <input class="form-control" asp-for="BirthDate" />
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i><label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i><label asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" />
        </div>

        <div asp-validation-summary="All" class="form-group">

        </div>

        <button type="submit" class="btn btn-primary btn-gray" style="background-color:yellow;color:black">Register</button>
    </form>
</div>
