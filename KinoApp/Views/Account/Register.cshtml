@model RegisterViewModel

<div class="register-form">
    <h2 class="form-label">Create your account</h2>
    <hr class="yello-hr">
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="form-group">
            <i class="fas fa-user"></i><label asp-for="Username"></label>
            <input class="form-control" asp-for="Username" />
        </div>
        <div class="form-group">
            <i class="fas fa-envelope"></i><label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="form-group">
            <i class="fas fa-calendar"></i><label asp-for="BirthDate"></label>
            <input class="form-control" asp-for="BirthDate" type="date" value="test" />
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i><label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i><label asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" />
        </div>

        @*<div asp-validation-summary="All" class="form-group"></div>*@
        @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
        {
            <div class="alert-danger" style="margin-bottom:15px;">
                @foreach (var error in ViewData.ModelState.Values)
                {
                    foreach (var er in error.Errors)
                    {
                        <div>
                            <i class="fas fa-exclamation-circle"></i>@er.ErrorMessage
                        </div>
                    }
                }
            </div>
        }

        <div style="width:100%;text-align:center">
            <div class="btn-center">
                <button type="submit" class="form-control btn btn-primary btn-gray">Register</button>
            </div>
        </div>

    </form>
</div>
